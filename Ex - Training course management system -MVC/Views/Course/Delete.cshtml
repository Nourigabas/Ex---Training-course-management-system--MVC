@using Ex___Training_course_management_system__MVC.Models
@model Course

<link rel="stylesheet" href="~/css/Course-Delete.css">

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container">
    <h1>Delete Course</h1>
    <h3>Are you sure you want to delete this course?</h3>
    <div class="mb-4">
        <h4>@Model.Name</h4>
        <p>@Model.Description</p>
        <p>Start Date: @Model.StartDate.ToShortDateString()</p>
        <p>End Date: @Model.EndDate.ToShortDateString()</p>
        <p>Hours: @Model.DurationHours</p>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

